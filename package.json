{
  "name": "koa-ts-tdd",
  "version": "1.0.0",
  "description": "KOA Typescript TDD",
  "main": "index.js",
  "scripts": {
    "start": "ts-node-dev ./src/server.ts",
    "test": "NODE_ENV=test PORT=3001 jest",
    "test:watch": "npm test -- --watchAll"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mosmartin/koa-ts-tdd.git"
  },
  "keywords": [
    "Koa",
    "Typescript",
    "TDD"
  ],
  "author": "Martin Macharia",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/mosmartin/koa-ts-tdd/issues"
  },
  "homepage": "https://github.com/mosmartin/koa-ts-tdd#readme",
  "dependencies": {
    "dotenv": "^8.2.0",
    "koa": "^2.13.1",
    "koa-bodyparser": "^4.3.0",
    "koa-logger": "^3.2.1",
    "koa-router": "^10.0.0",
    "koa2-cors": "^2.0.6"
  },
  "devDependencies": {
    "@types/jest": "^26.0.20",
    "@types/koa": "^2.13.1",
    "@types/koa-bodyparser": "^4.3.0",
    "@types/koa-logger": "^3.1.1",
    "@types/koa-router": "^7.4.1",
    "@types/koa2-cors": "^2.0.1",
    "@types/node": "^14.14.35",
    "@types/supertest": "^2.0.10",
    "jest": "^26.6.3",
    "supertest": "^6.1.3",
    "ts-jest": "^26.5.3",
    "ts-node-dev": "^1.1.6",
    "typescript": "^4.2.3"
  },
  "jest": {
    "verbose": true,
    "collectCoverage": true,
    "modulePathIgnorePatterns": [
      "<rootDir>/node_modules/"
    ],
    "roots": [
      "<rootDir>/__tests__"
    ],
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testEnvironment": "node",
    "testPathIgnorePatterns": [
      "/node_modules/"
    ],
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.tsx?$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  }
}
